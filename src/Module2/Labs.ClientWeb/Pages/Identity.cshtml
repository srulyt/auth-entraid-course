@page
@model IdentityModel
@{
    ViewData["Title"] = "Your Identity";
}

<h1>Your Identity (ID Token)</h1>
<p class="lead">View your ID token claims</p>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">ID Token Claims</h5>
    </div>
    <div class="card-body">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Claim Type</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in User.Claims.OrderBy(c => c.Type))
                    {
                        <tr>
                            <td><code>@claim.Type</code></td>
                            <td>@claim.Value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Not authenticated</p>
        }
    </div>
</div>

<div class="mt-3">
    <a href="/" class="btn btn-secondary">‚Üê Back to Home</a>
</div>
